<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/favoriteRecycler">
    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:id="@+id/hiddenBarFavScreen"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="31dp"
            android:layout_centerVertical="true"
            android:id="@+id/playPauseButton"
            android:background="@drawable/pause_icon" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/now_playing_bar_eq_image"
            android:id="@+id/default_music"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:minHeight="0dp"
            android:minWidth="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nowPlaying"
            android:text="Now playing"
            android:ellipsize="marquee"
            android:textColor="#bdbdbd"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/default_music"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="15sp"
            android:maxWidth="160dp"
            android:minHeight="0dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/songTitleFavScreen"
            android:text="Thodi Der"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/default_music"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:minHeight="0dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:singleLine="true"
            android:maxWidth="160dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="you have not any favorites!!"
    android:background="#ffffff"
    android:visibility="invisible"
    android:id="@+id/noFavoirite"
    android:layout_centerInParent="true"
    />

</RelativeLayout>